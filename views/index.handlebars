<div class="container mt-5">
  <table class="table table-striped table-hover">
    {{#each records}}
    <tr>
      <td>{{{ this.category.icon }}}</td>
      <td>
        <div class="index-name">{{ this.name }}</div>
        <small class="index-date">{{ this.date }}</small>
      </td>
      <td>{{this.amount}}</td>
      <td>
        <div class="index-edit">修改</div>
        <div class="index-delete">刪除</div>
      </td>
    </tr>
    {{/each}}
  </table>
</div>